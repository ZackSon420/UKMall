<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Register">

    <TextView
        android:id="@+id/tv_signuplg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="Sign up Now"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_haveaccountlg"
        app:layout_constraintStart_toEndOf="@+id/tv_haveaccountlg"
        app:layout_constraintTop_toTopOf="@+id/tv_haveaccountlg" />

    <EditText
        android:id="@+id/et_passwordlg"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/et_boarder"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColorHint="#D1C9C9"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_passwordlg"
        app:layout_constraintTop_toBottomOf="@+id/tv_passwordlg" />

    <TextView
        android:id="@+id/tv_passwordlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/et_usernamelg"
        app:layout_constraintTop_toBottomOf="@+id/et_usernamelg" />

    <TextView
        android:id="@+id/tv_login1lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/expletus_sans_semibold"
        android:text="Login"
        android:textColor="#FFFFFF"

        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login2lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Get Started Now!"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_login1lg"
        app:layout_constraintTop_toBottomOf="@+id/tv_login1lg" />

    <EditText
        android:id="@+id/et_usernamelg"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@drawable/et_boarder"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColorHint="#D1C9C9"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_usernamelg"
        app:layout_constraintTop_toBottomOf="@+id/tv_usernamelg" />

    <TextView
        android:id="@+id/tv_usernamelg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_login2lg"
        app:layout_constraintTop_toBottomOf="@+id/tv_login2lg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_loginlg"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/bt_button"
        android:fontFamily="@font/chakra_petch_semibold"
        android:hapticFeedbackEnabled="false"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_passwordlg"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_haveaccountlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter"
        android:text="Doesn't have an account?"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_loginlg" />

</androidx.constraintlayout.widget.ConstraintLayout>